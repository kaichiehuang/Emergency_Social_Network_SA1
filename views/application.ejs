<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en" >
<head>
    <% include partials/head %>
</head>
<body class="loggedin-body">
    <div class="">
        <header class="header header-loggedin">
            <div class="container">
                <% include partials/loggedin_header.ejs %>
            </div>
        </header>
    </div>


    <main class="main-content main-content-loggedin">
        <!-- Page content goes here -->

        <div class="container">
            <% include partials/user_profile %>
        </div>
        <div class="container">
            <% include partials/user_profile_form0 %>
        </div>
        <div class="container">
            <% include partials/user_profile_form1 %>
        </div>
        <div class="container">
            <% include partials/user_profile_form2 %>
        </div>
        <div class="container">
            <% include partials/user_profile_form3 %>
        </div>

        <div class="container">
            <% var block_id= 'public'; %>
            <% var messageBlockTitle= ''; %>
            <% include partials/public_chat_content %>
        </div>
        <div class="container">
            <% var block_id= 'private'; %>
            <% var messageBlockTitle= ''; %>
            <% include partials/public_chat_content %>
        </div>
        <div class="container">
            <% var block_id= 'announcement'; %>
            <% var messageBlockTitle= 'Previous Announcements'; %>
            <% include partials/public_chat_content %>
        </div>
        <div class="container">
            <% include partials/user_list %>
        </div>
        <div class="container">
            <% include partials/status-selection-popup %>
            <% include partials/spam-form-popup %>
        </div>
        <div class="container">
            <% include partials/resources %>
        </div>
        <div class="container">
            <% include partials/resources_list_show %>
        </div>

        <div class="container">
            <% include partials/emergency_status_detail %>
        </div>

        <div class="container">
            <% include partials/sign_out_popup %>
        </div>


        <!-- END OF CONTENT -->
    </main>

    <footer class="footer">
        <% include partials/footer %>
    </footer>


    <div class="boxloader" id="boxloader">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
        <p>&nbsp;</p>
    </div>

    <% include partials/global_stylesheets %>

    <!-- Scripts at the bottom for better performance -->
    <% include partials/global_scripts %>


    <!-- LOCAL SCRIPTS -->
    <script src="<%= getVersionedPath('javascripts/baseMessage.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/chat.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/privateChat.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/announcements.js') %>" ></script>
    <script src="<%= getVersionedPath('javascripts/user.js') %>" ></script>
    <script src="<%= getVersionedPath('javascripts/userList.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/userProfile.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/userProfileForm.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/signup.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/signout.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/status_selection_popup.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/spam_form_popup.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/resources.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/resources_list.js') %>"></script>
    <script src="<%= getVersionedPath('javascripts/emergency_status_detail.js') %>"></script>



</body>
</html>
