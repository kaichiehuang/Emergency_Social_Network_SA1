<div class="row">
    <div class="col-xs-24 col-sm-24 col-md-24 col-lg-24">
        <div class="message-chat-content main-content-block hidden" id="<%= block_id %>-chat-content">
            <div class="msg_border">
                <div class="messaging">
                    <div class="msg_area msg_area-<%= block_id %>" id="<%= block_id %>-msg_area">
                        <% if (messageBlockTitle != '') { %> <h4 class="text-center block-title"><%= messageBlockTitle %></h4> <% } %>
                        <% if (block_id == 'private') { %> <h4 class="text-center block-title">Chatting with <span id="receiver-username">--</span></h4> <br /><% } %>
                        <ul class="list-group list-group-flush" id="<%= block_id %>-chat">
                            <template id="<%= block_id %>-template">
                                <li class="user-post user-post- list-group-item list-group-item-action flex-column align-items-center">
                                    <div class="msg_metadata">
                                        <div class="list-group-item__left">
                                            <span class="status-indicator-element"> &nbsp;  </span>
                                            <small class="username"> %username_token% </small>
                                            <small class="report-user-number"> </small>
                                        </div>
                                        <div class="list-group-item__right">
                                            <small class="report-msg-number"> </small>
                                            <a class="report-link" data-toggle="modal" data-target="#spam-modal" href="javascript:void(0);">
                                                <span class="report"> report </span>
                                            </a>
                                            <small class="timestamp"> %timestamp_token% </small>
                                        </div>
                                    </div>
                                    <p class="mb-1 text-wrap text-break msg">
                                        %message_token%
                                    </p>
                                    <div class="spam-msg hidden">
                                        <span class="fa fa-ban"/>
                                        <span class="spam-note">This is a spam message reported by 3 users.</span>
                                    </div>
                                </li>
                            </template>
                        </ul>
                        <p class="no-results-message text-center hidden">
                            NO MESSAGES FOUND
                        </p>
                        <p class="more-results-button-container text-center hidden" id="search-<%= block_id %>-chat__more">
                            <a class="" id="search-<%= block_id %>-chat__more-button">Load more results</a>
                        </p>
                    </div>
                    <div class="type_area">
                        <form id="<%= block_id %>-msg-form" action="">
                            <div class="input-group">
                                <input type="text" autocomplete="off" class="form-control" placeholder="Type your message here"
                                aria-label="Recipient's username" aria-describedby="basic-addon2"  id="<%= block_id %>-send-message-content"/>
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="button" id="<%= block_id %>-send-btn">
                                        <span class="glyphicon glyphicon-send" aria-hidden="true"></span>&nbsp;&nbsp;Send
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <div class="modal fade" id="user-spam-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h3 class="modal-title">Spam Warning</h3>
                                </div>
                                <div class="modal-body">
                                    You're identified as a spam user,
                                    and forbidden to send any message on the public wall forever.
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Confirm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>