<div class="public-chat main-content-block " id="public-chat">


    <h1 class="text-center"> Public Chat </h1>

    <div class="msg_border">
        <div class="messaging">
            <div class="msg_area">
                <ul class="list-group list-group-flush" id="chat">
                    <!-- Chat message goes here -->
                    <li class="list-group-item list-group-item-action flex-column align-items-center">
                        <div class="msg_metadata">
                            <small> username </small>
                            <small> timestamp </small>
                        </div>
                        <p class="mb-1 text-wrap text-break msg">
                            message1
                        </p>
                    </li>

                    <li class="list-group-item list-group-item-action flex-column align-items-center">
                        <div class="msg_metadata">
                            <small> username </small>
                            <small> timestamp </small>
                        </div>
                        <p class="mb-1 text-wrap text-break msg">
                            message2
                        </p>
                    </li>

                </ul>
            </div>
            <div class="type_area">
                <form action="">
                    <div class="input-group">
                        <input type="text" autocomplete="off" class="form-control" placeholder="Type your message here"
                        aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button"><span class="glyphicon glyphicon-send"
                                    aria-hidden="true">
                                </span> Send</button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>