                            <form accept-charset="utf-8" id="profile-form2" class="profile-form">
                                <input type="hidden" name="step" value="2" id="form_step">
                                <input type="hidden" name="user_id" id="form_user_id" value="">
                                <!-- Personal info content -->
                                <div class="profile-form profile-form__personal-info">
                                    <h4 class="subtitle">Medical Information</h4>
                                    <div class="profile-form__user-attribute-data">
